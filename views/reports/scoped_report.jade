extends ../layout

block content
  - if (typeof(docs) !== 'undefined')
    link(rel='stylesheet', href='/stylesheets/scoped_report.css')
    script(type='text/javascript', src='/javascripts/d3.v3/d3.v3.min.js')
    script(type='text/javascript', src='/javascripts/scoped_report.js')
    script
      scopedReport(!{JSON.stringify(docs)});

  - else if (typeof(links) !== 'undefined')
    ul.nav.nav-pills
      - for link in links
        - if (link !== '')
          li
            a.btn.btn-link.custom(href="/scoped_report?userId=#{encodeURIComponent(link)}")=link