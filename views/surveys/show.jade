extends ../layout

block content
  .page-header
    h1
      | Survey
      span.pull-right
        a.btn.btn-inverse(href='/surveys') Back
        | &nbsp;
        a.btn(href='/surveys/'+survey.id+'/edit') Edit
        | &nbsp;
        a.btn.btn-danger.apiDestroy(href='/surveys/'+survey.id) Destroy
  table.table.table-bordered.table-striped
    tbody
      tr
        td
          strong SurveyId
        td= survey.surveyId
      tr
        td
          strong Version
        td= survey.version
      tr
        td
          strong UserTelNumber
        td= survey.userTelNumber
      tr
        td
          strong AnsweredAt
        td= survey.answeredAt
      tr
        td
          strong Answers
        td= survey.answers